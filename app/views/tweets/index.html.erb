<h1>Gohan</h1>
<h2>投稿一覧ページ</h2>
<%= link_to "Gohan診断をする！", new_perfume_path %>
<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
<%= link_to "新規投稿へ", new_tweet_path %>
<h2>いいねランキング</h2>
<% if @rank_tweets.present? %>
  <% @rank_tweets.each do |t| %>
    <p><%= t.omise %> : <%= t.likes.count %>いいね</p>
  <% end %>
<% end %>
<div class="tweets-container">
  <% @tweets.each do |t| %>
    <div class="tweet">
      <%= link_to t.user.name, user_path(t.user.id) %>
      <%= t.user.email %>
    　<%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.basho %>
      <%= t.kansou %>
      <%= t.nedan %>
      <%= t.setumei %>
      <%= t.omise %>
      <% if user_signed_in? %>
     <% if current_user.already_liked?(t) %>
        <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), data: { turbo_method: :delete } do %>
            <i class="fas fa-heart fa-2x" style="color:#ffbbdd;""></i><%= t.likes.count %>
            <p>いいねを取り消す</p><%= t.likes.count %>
        <% end %>
     <% else %>
        <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id), data: { turbo_method: :post }  do %>
            <i class="far fa-heart fa-2x" style="color:#ffbbdd;""></i><%= t.likes.count %>
            <p>いいね</p><%= t.likes.count %>
        <% end %>

   

    <% end %>
     
<% else %>
    <i class="far fa-heart fa-2x" style="color:#ffbbdd;"></i><%= t.likes.count %>
    <p>いいねの数 = </p><%= t.likes.count %>
<% end %>
      <%= link_to "詳細へ", tweet_path(t.id) %>
      <% if user_signed_in? && current_user.id == t.user_id %>
       <%= link_to "編集する", edit_tweet_path(t.id) %>
       <%= button_to "削除する", tweet_path(t.id), method: :delete %>
      <% end %> 
    </div>

    
<div>
<h2>総合評価：
<span class="star-rating">
   <span class="star-rating-front" style="width: <%= getPercent(t.overall) %>%;">★★★★★</span>
   <span class="star-rating-back">★★★★★</span>
</span> 
</h2>
</div>

<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'タグを追加' %>
<% end %>



  <% end %>
</div>

 <h2>いいねランキング</h2>
<% if @rank_tweets.present? %>
  <% @rank_tweets.each do |t| %>
    <p><%= t.basho %> : <%= t.likes.count %>いいね</p>
  <% end %>
<% end %>

